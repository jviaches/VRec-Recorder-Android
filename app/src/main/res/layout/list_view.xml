<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:gravity="left|center"
              android:layout_width="wrap_content">

    <ImageView android:id="@+id/soundLeft"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_gravity="left|center_vertical"
               android:layout_weight="1"
               android:padding="5dip"
               android:src="@drawable/left_img_sound_not_selec"></ImageView>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:orientation="vertical">

        <TextView android:id="@+id/tvFileName" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="left"
                  android:paddingLeft="6dp"
                  android:singleLine="true"
                  android:textColor="#FFFFFF"></TextView>

        <TextView android:id="@+id/tvDateTime" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="left"
                  android:paddingLeft="6dp"
                  android:textSize="10dp"
                  android:textColor="#999999"></TextView>

    </LinearLayout>

    <ImageView android:id="@+id/arrowRight"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_gravity="right|center_vertical"
               android:layout_weight="1"
               android:src="@drawable/right_img_sound_not_selec"></ImageView>

</LinearLayout>
